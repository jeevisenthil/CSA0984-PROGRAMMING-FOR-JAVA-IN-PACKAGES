import java.io.*;
import java.util.*;

class AddAmount {
    int amt = 50, add, add2, money;
    AddAmount() {
        money = 0; 
        add = amt + money;
        System.out.println("Piggy Bank Amount: " + add + "$");
    }
    AddAmount(int s) {
        money = s; 
        add2 = amt + money;
        System.out.println("Piggy Bank Amount: " + add2 + "$");
    }
}

class Amount {
    public static void main(String[] args) {
        AddAmount n = new AddAmount();
        AddAmount m = new AddAmount(100);
    }
}
